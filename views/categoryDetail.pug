extends layout

block content
    div.categoryDetail
        div.title 
            h3 Products for category: #{category.name}

        div.board
            if products.length
                table(border="1")
                    thead 
                        tr
                            th Name
                    tbody 
                        each product in products
                            tr
                                td 
                                    a(href=product.detailUrl)= product.name
            else
                p This category has no products.
