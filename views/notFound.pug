extends layout

block content
    div.error
        div.title
            span.icon.mdi--chat-alert-outline
            h1 404 #[span #{type[0].toUpperCase() + type.slice(1)} Not Found]

        div.message
            p Our apologies, there has been an error.
            p The #{type} you are looking for cannot be found.
            
            if type === 'page'
                p Please make sure the URL is correct or surf over to our other pages.