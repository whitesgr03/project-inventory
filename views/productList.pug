extends layout

block content
    div.product
        div.topBar
            div.title
                span.icon.tabler--dog-bowl
                h2=title
            div.feature
                a(href='/inventory/product/create')
                    span.icon.mdi--add
                    | Add new
        
        ul.list
            each product, index in products
                li 
                    a(href=product.detailUrl) #{index + 1}. !{product.name}

